{
  "name": "profile-card-component",
  "version": "1.0.0",
  "description": "Solution for this Front End Mentor Challenge",
  "main": "index.html",
  "scripts": {
    "dev": "sass sass/main.scss css/style.css --watch",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "sass --style=compressed css/style.prefix.css css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MachochinLopez/FEM-profile-card-component.git"
  },
  "author": "MachochinLopez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MachochinLopez/FEM-profile-card-component/issues"
  },
  "homepage": "https://github.com/MachochinLopez/FEM-profile-card-component#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.5"
  }
}
